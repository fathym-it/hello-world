{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"module": "esnext",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		],
		"paths": {
			"@fathym-it/hello-world-common": [
				"dist/common"
			],
			"@fathym-it/hello-world-common/*": [
				"dist/common/*"
			]
		}
	},
	"angularCompilerOptions": {
		"enableIvy": false,
		"strictInjectionParameters": true,
		"strictTemplates": true
	}
}
