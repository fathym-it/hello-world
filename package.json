{
  "name": "@fathym-it/hello-world",
  "version": "0.0.6",
  "scripts": {
    "build:common": "ng build common",
    "build:demo": "ng build demo --prod",
    "build:lcu": "ng build lcu --prod --single-bundle && npm run pack",
    "demo": "npm run build:common && npm run start:demo",
    "demo:lcu": "npm run build:common && npm run build:lcu && npm run start:demo",
    "deploy": "npm version patch && npm run deploy:all",
    "deploy:all": "npm run deploy:common && npm run deploy:lcu && npm run deploy:demo",
    "deploy:common": "npm version patch --prefix projects/common && npm run build:common && npm run styles:common && npm publish ./dist/common --access public",
    "deploy:demo": "npm version patch --prefix projects/demo/ && npm run build:demo && npm publish ./dist/demo --access public",
    "deploy:lcu": "npm version patch --prefix projects/lcu/ && npm run build:lcu && npm publish ./dist/lcu --access public",
    "ng": "ng",
    "pack": "npm run pack:lcu",
    "pack:join": "concat-glob-cli -f \"dist/lcu/wc/lcu.*.js\" -o dist/lcu/wc/lcu-hello-world.lcu.js",
    "pack:lcu": "rimraf dist/lcu/wc && mkdirp dist/lcu/wc && npm run pack:main && npm run pack:pollyfills && npm run pack:join",
    "pack:main": "concat-glob-cli -f \"dist/lcu/main.*.js\" -o dist/lcu/wc/lcu.startup.js",
    "pack:pollyfills": "concat-glob-cli -f \"dist/lcu/scripts.*.js\" -o dist/lcu/wc/lcu.pollyfills.js",
    "styles:common": "npm run styles:common:css && npm run styles:common:scss",
    "styles:common:css": "cpx \"./projects/common/src/styles/**/*.css\" \"./dist/common/styles/\"",
    "styles:common:scss": "cpx \"./projects/common/src/styles/**/*.scss\" \"./dist/common/styles/\"",
    "start:demo": "ng serve demo --port=4254",
    "build": "npm run build:common && npm run build:lcu",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^10.0.8",
    "@angular/cdk": "^10.1.2",
    "@angular/common": "^10.0.8",
    "@angular/compiler": "^10.0.8",
    "@angular/core": "^10.0.8",
    "@angular/elements": "^10.0.8",
    "@angular/flex-layout": "^10.0.0-beta.32",
    "@angular/forms": "^10.0.8",
    "@angular/material": "^10.1.2",
    "@angular/platform-browser": "^10.0.8",
    "@angular/platform-browser-dynamic": "^10.0.8",
    "@angular/router": "^10.0.8",
    "@aspnet/signalr": "^1.1.4",
    "@lcu/common": "^1.41.188",
    "@lowcodeunit-devkit/ng-lcu": "1.12.71",
    "@webcomponents/custom-elements": "^1.4.2",
    "@webcomponents/webcomponentsjs": "^2.4.4",
    "core-js": "^3.6.5",
    "ngx-build-plus": "^10.1.1",
    "rxjs": "~6.6.2",
    "terser": "^5.2.1",
    "tslib": "^2.0.1",
    "zone.js": "~0.11.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1001.1",
    "@angular-devkit/build-ng-packagr": "^0.1001.1",
    "@angular/cli": "^10.1.1",
    "@angular/compiler-cli": "^10.1.1",
    "@angular/language-service": "^10.1.1",
    "@lcu/cli": "^1.6.89",
    "@types/jasmine": "~3.5.14",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^14.10.2",
    "codelyzer": "^6.0.0",
    "concat-glob-cli": "^0.1.0",
    "cpx": "^1.5.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "~5.2.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "mkdirp": "^1.0.4",
    "ng-packagr": "^10.1.0",
    "node-sass": "^4.14.1",
    "protractor": "~7.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "~9.0.0",
    "tsickle": "0.39.1",
    "tslib": "^2.0.1",
    "tslint": "~6.1.3",
    "typescript": "4.0.2"
  }
}
